#:kivy 1.10.1
#:import kivy kivy

<Screen>:
    #size: (500, 500)

    Button:
        pos: (0, 550)
        id: btn
        text: 'Subject'
        on_release: dropdown.open(self)
        size_hint: (.7, .1)

    Widget:
        on_parent: dropdown.dismiss()

    DropDown:

        id: dropdown
        on_select: btn.text = 'Selected value: {}'.format(args[1])

        Button:
            text: 'Value A'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('A')

        Button:
            text: 'Value B'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('B')

        Button:
            text: 'Value C'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('C')

    ImageButton:

        id: lngbtn
        source: 'data\icon\en.png'
        pos: (650, 500)
        size_hint: (.2, .2)
        on_release: language.open(self)

    Widget:

        on_parent: language.dismiss()

    DropDown:
        
        id: language
        on_select: lngimg.source = args[1]

        ImageButton:

            id: lng1
            source: 'data\\icon\\ru.png'
            size_hint_y: None
            height: '96dp'

        Label:
            size_hint_y: None
            height: '10dp'

        ImageButton:

            id: lng2
            source: 'data\\icon\\by.png'
            size_hint_y: None
            height: '96dp'
